{
  "baseUrl": "./src",
  "compilerOptions": {
    "noEmit": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2022"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "jest.config.js"
  ]
}
